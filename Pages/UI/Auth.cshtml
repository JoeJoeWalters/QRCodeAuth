@page
@model Service.Pages.UI.AuthModel
@{
}

<html>
<body>

    @if (Model.Authorised)
    {
        <h1>Transaction Approved</h1>
    }

    @if (!Model.Authorised)
    {
        <h1>Transaction Not Approved</h1>
    }

    @if(Model.ErrorMessage != string.Empty)
    {
        <p>@Model.ErrorMessage</p>
    }

</body>
</html>